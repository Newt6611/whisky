{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OperationalCert",
  "type": "object",
  "required": [
    "hot_vkey",
    "kes_period",
    "sequence_number",
    "sigma"
  ],
  "properties": {
    "hot_vkey": {
      "type": "string"
    },
    "kes_period": {
      "type": "integer",
      "format": "uint32",
      "minimum": 0.0
    },
    "sequence_number": {
      "type": "integer",
      "format": "uint32",
      "minimum": 0.0
    },
    "sigma": {
      "type": "string"
    }
  }
}